<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.kitaverwaltung.controller.GruppeController" spacing="10" style="-fx-padding: 20;">

    <TableView fx:id="gruppeTable" style="-fx-padding: 20;">
        <columns>
            <TableColumn fx:id="gruppe_id" text="ID" visible="false" />
            <TableColumn fx:id="name" text="Gruppe" />
            <TableColumn fx:id="erzieher" text="Erzieher" />
            <TableColumn fx:id="standort_name" text="Standort" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="gruppennameField" promptText="Gruppenname" />
        <ComboBox fx:id="erzieherComboBox" promptText="Erzieher" />
        <ComboBox fx:id="standortComboBox" promptText="Standort" />
    </HBox>

    <HBox spacing="10" stylesheets="@css/style.css">
        <Button fx:id="btnAdd" styleClass="action-button, add-button" stylesheets="@css/style.css" text="➕ Hinzufügen" onAction="#addGruppe" />
        <Button fx:id="btnEdit" styleClass="action-button, edit-button" stylesheets="@css/style.css" text="🖊 Bearbeiten" onAction="#editGruppe" />
        <Button fx:id="btnDelete" styleClass="action-button, delete-button" stylesheets="@css/style.css" text="❌ Löschen" onAction="#deleteGruppe" />
    </HBox>
</VBox>