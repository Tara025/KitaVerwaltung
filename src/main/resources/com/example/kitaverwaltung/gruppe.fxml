<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="629.0" prefWidth="475.0" spacing="10" style="-fx-padding: 20;" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kitaverwaltung.controller.GruppeController">

    <Label style="-fx-font-size: 24px;" styleClass="label_main" text="Gruppen" />
   <VBox>
      <children>
      
      
          <TableView fx:id="gruppeTable" prefHeight="402.0" prefWidth="435.0" style="-fx-padding: 20;">
              <columns>
                  <TableColumn fx:id="gruppe_id" text="ID" visible="false" />
                  <TableColumn fx:id="name" text="Gruppe" />
                  <TableColumn fx:id="erzieher" text="Erzieher" />
                  <TableColumn fx:id="standort_name" text="Standort" />
              </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
      </children>
   </VBox>

    <HBox prefHeight="47.0" prefWidth="435.0" spacing="10" stylesheets="@css/style.css">
        <TextField fx:id="gruppennameField" prefHeight="43.0" prefWidth="174.0" promptText="Gruppenname" styleClass="eingabeField" />
        <ComboBox fx:id="erzieherComboBox" prefWidth="118.0" promptText="Erzieher" />
        <ComboBox fx:id="standortComboBox" promptText="Standort" />
    </HBox>

    <HBox spacing="10" stylesheets="@css/style.css">
        <Button fx:id="btnAdd" onAction="#addGruppe" styleClass="action-button, add-button" stylesheets="@css/style.css" text="➕ Hinzufügen" />
        <Button fx:id="btnEdit" onAction="#editGruppe" styleClass="action-button, edit-button" stylesheets="@css/style.css" text="🖊 Bearbeiten" />
        <Button fx:id="btnDelete" onAction="#deleteGruppe" styleClass="action-button, delete-button" stylesheets="@css/style.css" text="❌ Löschen" />
    </HBox>
</VBox>
