<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kitaverwaltung.controller.AnwesenheitController" spacing="10" style="-fx-padding: 20;">
    <ComboBox fx:id="personTypeComboBox" promptText="Select Person Type"/>
    <ComboBox fx:id="personNameComboBox" promptText="Select Person Name"/>
    <TableView fx:id="anwesenheitTable" style="-fx-padding: 20;">
        <columns>
            <TableColumn fx:id="dateColumn" text="Datum"/>
            <TableColumn fx:id="statusColumn" text="Status"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="➕ Hinzufügen" fx:id="btnAdd"/>
        <Button text="🖊️ Bearbeiten" fx:id="btnEdit"/>
        <Button text="❌ Löschen" fx:id="btnDelete"/>
    </HBox>
</VBox>
